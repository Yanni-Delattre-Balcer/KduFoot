{
  "name": "kdufoot",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:env": "turbo run build:env",
    "dev": "turbo run dev",
    "dev:env": "turbo run dev:env",
    "preview:env": "turbo run preview:env",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:client": "turbo run dev --filter=@kdufoot/client",
    "dev:worker": "turbo run dev --filter=@kdufoot/api",
    "dev:client:env": "turbo run dev:env --filter=@kdufoot/client",
    "dev:worker:env": "turbo run dev:env --filter=@kdufoot/api",
    "build:client": "turbo run build --filter=@kdufoot/client",
    "build:worker": "turbo run build --filter=@kdufoot/api",
    "build:client:env": "turbo run build:env --filter=@kdufoot/client",
    "build:worker:env": "turbo run build:env --filter=@kdufoot/api",
    "deploy:worker": "turbo run deploy --filter=@kdufoot/api"
  },
  "devDependencies": {
    "@types/node": "^24.10.11",
    "dotenv-cli": "^11.0.0",
    "shx": "^0.4.0",
    "turbo": "^2.8.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.6.2"
  }
}